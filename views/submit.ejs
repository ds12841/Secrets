<%- include('partials/header') %>
<%- include('partials/navbar')%>
<div class="container">
  <div class="jumbotron centered">
    <i class="fas fa-key fa-4x"></i>
    <h1 class="display-3">Secrets</h1>
    <p class="secret-text">Don't keep your secrets, share them in anyway you like!</p>

    <form action="/submit" method="POST">
    <div class="form-group">
        <input type="text" class="form-control text-center" name="title" placeholder="Title" autocomplete="off" required>
      </div>
      <div class="form-group">
        <input type="text" class="form-control text-center" name="secret" placeholder="What's your secret?" autocomplete="off" required >
      </div>
      <div>
        <input type="checkbox" id="status" name="status" value="Anonymous">
        <label for="status">Anonymous</label>
      </div>
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>


  </div>
</div>
<%- include('partials/footer') %>
